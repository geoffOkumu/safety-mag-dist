{{!< default}}

{{#post}}
<section class="bg-gray-200 py-3">
    <div class="container text-sm">
        <a href="/">Home</a> <span class="mx-3">/</span> <span class="text-black/80">{{primary_tag.name}}</span>
    </div>
</section>

<article class="{{post_class}}">

    <header>
        <div class="container mb-4 mt-8">
            <h1 class="text-5xl font-bold leading-[1.5]">{{title}}</h1>
            
            <div class="my-4 flex flex-wrap items-center">
                {{#foreach tags}}
                <a href="{{url}}" class="p-2 mr-4 ring-offset-4 ring-black hover:ring-1 text-white bg-green-600 rounded-sm" {{#if accent_color}}style="background-color: {{accent_color}};"{{/if}}>
                    {{name}}
                </a>
            {{/foreach}}
                <time class="text-base mr-4 text-black/80" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                <span class="text-base text-black/80">
                    {{reading_time}}
                </span>
            </div>
            {{#if custom_excerpt}}
            <p class="gh-excerpt">{{custom_excerpt}}</p>
            {{/if}}
        </div>
        {{#if feature_image}}
        <figure class="w-full h-auto object-cover">
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 1000px, 2000px"
                loading="lazy"
                src="{{img_url feature_image size="xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                class="max-h-[600px] object-cover w-full"
            />
            {{#if feature_image_caption}}
                <figcaption class="text-sm mb-8">{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
        {{/if}}
        

        
    </header>

    <div class="gh-content gh-canvas">
        {{content}}
    </div>

    <footer class="gh-footer gh-canvas mt-8">
        <h5 class="text-sm text-black/70 uppercase">Written By:</h5>
        <div class="flex flex-wrap mt-4">
            {{#foreach authors}}
                <a href="{{url}}" class="flex items-center text-sm mt-2 mr-4 group">
                    {{#if profile_image}}
                        <img
                            class="rounded-full h-10 w-10 object-cover block mr-3"
                            src={{img_url profile_image size="xs"}}
                            alt="{{name}}"
                        />
                        {{else}}
                        <img
                            class="p-2 rounded bg-gray-100 h-8 block mr-3"
                            src={{asset "img/user.svg"}}
                            alt="user"
                        />
                    {{/if}}
                    <span class="text-lg group-hover:underline">{{name}}</span>
                </a>
            {{/foreach}}
        </div>

        {{!--
        <section class="gh-post-comments">
            If you want to embed comments, this is a good place to do it!
        </section>
        --}}

    </footer>

</article>

<aside class="mt-6 py-10 bg-gray-200">
    <div class="container flex flex-wrap justify-between">
        <h2 class="text-base text-black/80 uppercase mb-4 w-full">Recent Posts</h2>
        <div class="w-full md:w-[72%]">
            {{#next_post}}
                {{> "card"}}
            {{/next_post}}
            {{#prev_post}}
                {{> "card"}}
            {{/prev_post}}
        </div>
        <div class="w-full md:w-[25%]">
            {{> "home/subscribe"}}
        </div>
    </div>
</aside>
{{> "home/quicklinks"}}

{{/post}}
