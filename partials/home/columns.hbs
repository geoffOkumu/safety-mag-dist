<section class="container my-10">
    <div class="w-full flex justify-between">
        <h3 class="text-sm text-black/70 uppercase">Columns</h3>
        <div class="flex items-center">
            <span class="text-sm text-black/70 uppercase inline-block mr-2">View All</span>
            {{> "icons/arrow-right" className="h-3 w-auto"}}
        </div>
    </div>
    <div class="keen-slider mt-6" id="columns-slider">
        {{#get "authors" limit="6"}}
            {{#foreach authors}}
                <a href="{{url}}" class="block text-center keen-slider__slide number-slide{{@number}}">
                    {{#if profile_image}}
                        <img class="w-24 h-24 rounded-full object-cover mb-2 inline-block" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                        {{else}}
                        <div class="h-24 w-24 rounded-full bg-gray-200 inline-flex items-center justify-center mb-2">
                            <img
                                class="h-10 inline-block"
                                src={{asset "img/user.svg"}}
                                alt="author"
                            />
                        </div>
                    {{/if}}

                    <h4 class="text-sm">{{name}}</h4>
                </a>
            {{/foreach}}
        {{/get}}
    </div>
</section>